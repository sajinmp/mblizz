<% provide(:title, "Edit profile") %>
<h1 class = "signup_head">Update your profile</h1>

<%= form_for(@user) do |f| %>

  <%= render "form", f: f %>
  
  <center><%= f.submit "Update changes", class: "btn btn-large btn-primary" %></center>

<% end %>

<%= gravatar_for @user %>
<a href = "http://gravatar.com/emails">Change</a>
