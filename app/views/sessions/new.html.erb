<% provide(:title, "MBlizz") %>
<h1>Sign in</h1>

<div class = "row">
  <div class = "span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :username %>
      <br><br>
      <%= f.text_field :username, class: "text-field" %>
      
      <br>

      <%= f.label :password %>
      <br><br>
      <%= f.password_field :password, class: "text-field" %>
      <br>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>

    <% end %>
    <br><br>
    <p id = "new-signup">New user? <%= link_to "Sign up now", signup_path %></p>
  </div>
</div>
